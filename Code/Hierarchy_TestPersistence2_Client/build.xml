    <!-- load the common build settings -->
    <!-- don't delete this! even though redundant. needed to find the commonbuild settings file -->
    <property name="Hierarchy.Controller.proj.dir" value="../Hierarchy_ControllerProject"/>
    <property file="${Hierarchy.Controller.proj.dir}/Hierarchy-CommonBuildSettings.properties"/>

    <target name="run-PersistTest-02-Client"  depends="compile-test">

        <echo>____________________________________________________________________</echo>
        <echo/>
        <echo> Run the Persistent Client Junit Tests:</echo>
        <echo>   PersistTest_02a_Client__UpdatePersistentMatrix</echo>
        <echo>   PersistTest_02b_Client__ChunkTest_Simple_NoThreading</echo>
        <echo>   PersistTest_02c_Client__EndtoEnd_ChunkTest_withMonitorThread</echo>
        <echo>   PersistTest_02d_Client__CheckServerResults</echo>
        <echo>____________________________________________________________________</echo>

        <junit fork="true" dir="." printsummary="false" haltonfailure="true" haltonerror="true" >
            <!-- print out any errors and the output of each test to console using formatter -->
            <formatter type="brief" usefile="false"/>
            <classpath>
                <pathelement location="${Hierarchy.proj.dir}/dist/Hierarchy.jar"/>
                <pathelement path="${hierarchy.persistence.client.proj.classpath}"/>
                <pathelement path="${hierarchy.persistence.main.proj.classpath}"/>
            </classpath>

            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_02a_Client__UpdatePersistentMatrix"/>
            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_02b_Client__ChunkTest_Simple_NoThreading"/>
            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_02c_Client__EndtoEnd_ChunkTest_withMonitorThread"/>
            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_02d_Client__CheckServerResults"/>
        </junit>
    </target>



    <target name="run-PersistTest-03-Client"  depends="compile-test">

        <echo>____________________________________________________________________</echo>
        <echo/>
        <echo> Run the Persistent Client Junit Tests:</echo>
        <echo>   PersistTest_03a_Client__UpdatePersistentMatrix</echo>
        <echo>   PersistTest_03b_Client__CheckNewPersistedMatrix</echo>
        <echo>   PersistTest_03c_Client__CheckServerResults</echo>
        <echo>____________________________________________________________________</echo>

        <junit fork="true" dir="." printsummary="false" haltonfailure="true" haltonerror="true" >
            <!-- print out any errors and the output of each test to console using formatter -->
            <formatter type="brief" usefile="false"/>
            <classpath>
                <pathelement location="${Hierarchy.proj.dir}/dist/Hierarchy.jar"/>
                <pathelement path="${hierarchy.persistence.client.proj.classpath}"/>
                <pathelement path="${hierarchy.persistence.main.proj.classpath}"/>
            </classpath>

            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_03a_Client__UpdatePersistentMatrix"/>
            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_03b_Client__CheckNewPersistedMatrix"/>
            <test name="net.unconventionalthinking.hierarchy.persistence.PersistTest_03c_Client__CheckServerResults"/>
        </junit>
    </target>



</project>
